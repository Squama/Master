        <column key="regionCode" header="定额编号" width="120"/>
        <column key="regionName" header="子目名称" width="150" enableTooltip="true" maxLen="8"/>
        <column key="quantities" header="工程量" width="100"/>
        <column key="unitPrice" header="合价" width="150"/>
